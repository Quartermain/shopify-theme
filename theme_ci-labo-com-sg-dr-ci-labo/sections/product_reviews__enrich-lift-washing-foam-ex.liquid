{% include 'section__product_reviews' %}

{% schema %}
{
  "name": "Product Reviews",
  "settings": [
    {
      "type": "checkbox",
      "id": "reviews",
      "label": "Enable",
      "default": true
    },
    {
      "type": "text",
      "id": "reviews__title",
      "label": "Title",
      "default": "Reviews"
    },
    {
      "type": "checkbox",
      "id": "reviews__more",
      "label": "Enable",
      "default": true
    },
    {
      "type": "text",
      "id": "reviews__more__titles",
      "label": "Title",
      "default": "More"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Single review",
      "settings": [
        {
          "type": "text",
          "id": "reviews__review__title",
          "label": "Value",
          "default": "Review title"
        },
        {
          "type": "text",
          "id": "reviews__review__author",
          "label": "Value",
          "default": "Review author"
        },
        {
          "type": "textarea",
          "id": "reviews__review__text",
          "label": "Description",
          "default": "Write your review here"
        },
        {
          "type": "radio",
          "id": "reviews__review__stars",
          "options": [
            { "value": "1", "label": "1"},
            { "value": "2", "label": "2"},
            { "value": "3", "label": "3"},
            { "value": "4", "label": "4"},
            { "value": "5", "label": "5"}
          ],
          "label": "Review score"
        }
      ]
    }
  ]
}
{% endschema %}
