{% include 'section__product_slider' %}

{% schema %}
{
  "name": "Custom Slider",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_on_mobile",
      "label": "Show on mobile",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "title_underline",
      "label": "Show title underline",
      "default": false
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Text position",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "pagination",
      "label": "Use pagination",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Content",
      "settings": [
        {
          "type": "text",
          "id": "note",
          "label": "Note",
          "default": "Note"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "Heading",
          "default": "Your title"
        },
        {
          "type": "text",
          "id": "time",
          "label": "Time",
          "default": "Time"
        },
				{
          "type": "text",
          "id": "sub_title",
          "label": "Subtitle",
          "default": "Subtitle"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Description"
        },
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop Background image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Background image"
        },
        {
          "id": "link",
          "type": "url",
          "label": "Button link"
        },
        {
          "id": "linktext",
          "type": "text",
          "label": "Button text",
          "default": "Click here"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Slider",
      "name": "Custom Slider",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
