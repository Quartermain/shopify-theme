{% if section.settings.awards__enabled %}
<div class="bg-color--gallery">
	<div class="container pt--25">
	  <h1 class="h1--underline">{{ section.settings.awards__title }}</h1>

	  {% if section.settings.awards__description %}
	    <p class="pl--10 pr--10" style="font-size: 13px; text-align: center">{{ section.settings.awards__description }}</p>
	  {% endif %}

	  {% assign blockSize = section.blocks | size %}
	  {% if blockSize > 0 %}
	    <div class="container product-awards-list">
	      <div class="grid grid--gallery">
		      {% for block in section.blocks %}
		        {% if block.settings.awards__block__image != blank %}
		          <div class="grid__cell 1/1--thumb 1/2--lap-and-up">
			          <img alt="" style="margin-right: 12px; float: left; vertical-align: middle;" src="{{ block.settings.awards__block__image | img_url: '50x50', scale: 2 }}" alt="{{ block.settings.awards__block__image.alt | escape }}" width="50" height="50"/>
			          <p class="pt--10 pb--10" style="font-size: 10px">
			            {{ block.settings.awards__block__small_description }}<br>
			            <span style="text-transform: uppercase; font-size: 12px">
			              <b>{{ block.settings.awards__block__description }}</b>
			            </span>
			          </p>
		          </div>
		        {% endif %}
		      {% endfor %}
	      </div>
	    </div>
	  {% endif %}
	</div>
</div>
{% endif %}
