{% capture push_header %}
  <div class="header__push">
    <div class="container">
      <div class="inner">
        {% include 'breadcrumb' %}

        {% comment %}We provide an estimate of the reading time, based on the fact that average people read 180 words per minute{% endcomment %}

        {% assign minutes_to_read = article.content | strip_html | split: ' ' | size | divided_by: 180 | plus: 1 %}
        <p class="header__push-meta">{{ 'blog.article.minutes_to_read' | t: count: minutes_to_read }}</p>

        <div class="header__push-content">
          <h1 class="header__push-title h1--underline">{{ article.title }} </h1>
        </div>
      </div>
    </div>
  </div>
{% endcapture %}

{% section 'article' %}