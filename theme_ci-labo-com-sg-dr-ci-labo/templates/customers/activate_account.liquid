{% capture push_header %}
  <div class="header__push">
    <div class="container">
      <div class="inner">
        {% include 'breadcrumb' %}

        <div class="header__push-content">
          <h1 class="header__push-title text--center h1--underline">{{ 'customer.activate_account.title' | t }}</h1>
          <p>{{ 'customer.activate_account.description' | t }}</p>
        </div>
      </div>
    </div>
  </div>
{% endcapture %}

<div class="account__activate container" data-check-password>
  <div class="inner" style="padding-bottom:1.875rem">
    {% form 'activate_customer_password', class: 'activate-account__form form--shrink'%}
      {% if form.errors %}
        <div class="alert alert--error">
          <span class="alert__title">{{ 'general.forms.errors' | t }}</span>
          {% include 'form_errors' %}
        </div>
      {% endif %}

      <div class="form__control {% if form.errors.message.password %}form__control--error{% endif %}">
        <input placeholder="{{ 'customer.activate_account.password' | t }}" type="password" id="customer__password" name="customer[password]" required="required" tabindex="1">
        <p class="field__message field__message--error color--alizarin-crimson" style="display:none" id="error-for-password">{{ 'general.forms.unsafe_password' | t }}</p>
      </div>

      <div class="form__control {% if form.errors.message.password_confirmation %}form__control--error{% endif %}">
        <input placeholder="{{ 'customer.activate_account.password_confirmation' | t }}" type="password" id="customer__password-confirmation" name="customer[password_confirmation]" required="required" tabindex="2">
        <p class="field__message field__message--error color--alizarin-crimson" style="display:none" id="error-for-confirm-password">Password doesn't match</p>
      </div>

      <input type="submit" class="button button--primary" value="{{ 'customer.activate_account.submit' | t }}">
    {% endform %}
  </div>
</div>