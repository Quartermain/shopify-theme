{% capture push_header %}
  <div class="header__push">
    <div class="container">
      <div class="inner">
        <div class="header__push-content">
          <h1 class="header__push-title h1--underline">{{ 'customer.login.title' | t }}</h1>
        </div>
      </div>
    </div>
  </div>
{% endcapture %}

<div class="container pb--40">
  <div class="inner">
    <div class="account__login">
      {% form 'customer_login', class: 'login__form form--shrink' %}
        {% if form.errors %}
          <div class="alert alert--error">
            <span class="alert__title">{{ 'general.forms.errors' | t }}</span>
            {% include 'form_errors' %}
          </div>
        {% endif %}

        <div class="form__control {% if form.errors.message.email %}form__control--error{% endif %}">
          <!-- <label class="form__label" for="customer__email"></label> -->
          <input type="email" id="customer__email" name="customer[email]" required="required" tabindex="1" placeholder="{{ 'customer.login.email' | t }}" />
        </div>

        <div class="form__control {% if form.errors.message.password %}form__control--error{% endif %}">
          <!-- <label class="form__label" for="customer__password"></label> -->
          <input type="password" id="customer__password" name="customer[password]" required="required" tabindex="2" placeholder="{{ 'customer.login.password' | t }}" />
        </div>

        <div class="form__control">
          <input type="submit" class="button button--primary" value="{{ 'customer.login.submit' | t }}">
        </div>

        <p class="text--center">
          Forgot password? <a href="#" class="link--primary" data-action="display-recover-form">Click here</a>
          <!-- {{ 'customer.login.forgot_password' | t }} -->
        </p>
        <p class="text--center">
          {{ 'customer.login.register_link' | t }} <a href="/account/register" class="link--primary">Sign up here</a>
        </p>
      {% endform %}
    </div>

    <div class="account__recover" style="display: none">
      {% form 'recover_customer_password', class: 'reset-password__form form--shrink' %}
        {% if form.errors %}
          <div class="alert alert--error">
            <span class="alert__title">{{ 'general.forms.errors' | t }}</span>
            {% include 'form_errors' %}
          </div>
        {% endif %}

        {% if form.posted_successfully? %}
          <script>window.recoverPassword = true;</script>

          <div class="alert alert--success">
            <span class="alert__title">{{ 'customer.recover.sent' | t }}</span>
          </div>
        {% endif %}

        <div class="form__control {% if form.errors.message.email %}form-control--error{% endif %}">
          <input type="email" id="customer__recover-email" name="email" required="required" tabindex="1"
                 placeholder="{{ 'customer.recover.email' | t }}" />
        </div>

        <input type="submit" class="button button--primary" value="{{ 'customer.recover.submit' | t }}">
      {% endform %}
    </div>
  </div>
</div>