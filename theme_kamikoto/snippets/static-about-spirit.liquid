{% assign  blog = blogs.static-about-spirit %}
<div class="page-width">
	<div class="container-blog">
		{% for article in blog.articles %}
		<h1 class="align--center title-header">
	  		{{ article.title }}
	  	</h1>
        {% if article.excerpt != blank %}{{ article.excerpt }}{% else %}{{ article.content }}{% endif %}
      {% endfor %} 
	</div>
</div>
