{% assign blog = blogs.static-blog-carousel %}
<div class="page-width">
	<div class="container-blog">
		<h1>Kamikoto - Trusted By Chefs Worldwide </h1>
		<div class="owl-carousel static-blog-carousel">
	      {% for article in blog.articles %}
	      	{% comment %}{{ article.title }}{% endcomment %}
	      	<div class="item">
	        	{% if article.excerpt != blank %}
	        		<a href="{{ article.url }}">{{ article.excerpt }}</a>
	    		{% else %}
	        		{{ article.content }}
	        	{% endif %}
	        </div>
	      {% endfor %} 
		</div>
	</div>
</div> 


<script type="text/javascript">

	var jquery = null;

    if (window.jQuery) {
      jquery = window.jQuery;
    }
	
	if (jquery) {
	  $('.owl-carousel').owlCarousel({
	  	loop: true,
	  	margin: 30,
	  	nav: true,
	  	navText: ["<i class='fa fa-angle-left'></i>","<i class='fa fa-angle-right'></i>"],
	  	responsive: {
	  		0:{
	            items:1
	        },
	        600:{
	            items:2
	        },
	        1000:{
	            items:3
	        }
	  	}
	  });
	}
</script>
